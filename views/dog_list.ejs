<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="wrapper">
      <%- include("./partials/nav.ejs") %>
      <div class="list">
        <h1><%= title %></h1>
        <div class="content">
          <ul class="list_container">
            <% if (dog_list.length > 0) { %>
            <% dog_list.sort(function(a,b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return(textA < textB) ? -1 : (textA > textB) ? 1 : 0;}) %>
            <% dog_list.forEach(dog => { %>
            <li>
              <div class="li_card">
                <a href="<%= dog.url %>">
                  <img src="https://imgur.com/M2Q1Zv2.jpg" alt="Breeder Avatar Card">
                </a>
                <a href="<%= dog.url %>">
                  <p><%= dog.name %></p>
                </a>
                <p><%= dog.breeder.name %></p>
              </div>
            </li>
            <% }) %> <% } else { %>
            <p>
              There are no dogs available to adopt right now. Check again soon!
            </p>
            <% } %>
          </ul>
      </div>
      </div>
      <%- include("./partials/footer.ejs") %>
    </div>
  </body>
</html>
