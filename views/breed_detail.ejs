<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="wrapper">
      <%- include("./partials/nav.ejs") %>
      <div class="detail">
        <h1><%= breed.name %></h1>
        <img class="avatar" src="https://imgur.com/iyAuIuz.jpg" alt="Breed Avatar">
        <div class="words">
          <div class="content">
            <p><strong>Size</strong>: <%= breed.size%></p>
            <p><strong>Description</strong>: <%= breed.description%></p>
          </div>
          <hr>
          <div class="available">
            <h4>Dogs Available from this breed:</h4>
            <ul>
              <% if (breed_dogs.length > 0) { %>
              <% breed_dogs.sort(function(a,b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return(textA < textB) ? -1 : (textA > textB) ? 1 : 0;}) %>
              <% breed_dogs.forEach(dog => { %>
                <li>
                    <a class="li_container" href="<%= dog.url %>">
                      <div class="circle"></div>
                      <p><%= dog.name %></p>
                    </a>
                </li>
              <% }) %> <% } else { %>
              <p>
                There are no <%= breed.name %> available. Check again soon!
              </p>
              <% } %>
            </ul>
          </div>
          <div class="delete-update">
            <a href="<%= breed.url + '/delete' %>">Delete Breed</a>
            <a href="<%= breed.url + '/update' %>">Update Breed</a>
          </div>
        </div>
      </div>
      <%- include("./partials/footer.ejs") %>
    </div>
  </body>
</html>